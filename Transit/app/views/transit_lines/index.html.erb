<% content_for :title, "Transit Lines" %>
<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Transit Lines</h1>

  <table class="table">
    <thead>
      <tr>
         <th>Name</th>
        <th>Status</th>
        <th>Operating hours</th>
        <th>Type</th>
        <th>Restrictions</th>
        <th>Reliability</th>
        <th>Avg price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @transit_lines.each do |transit_line| %>
        <tr>
          <td><%= transit_line.name %></td>
          <td><%= transit_line.status %></td>
          <td><%= transit_line.operating_hours %></td>
          <td><%= transit_line.kind %></td>
          <td><%= transit_line.restrictions %></td>
          <td><%= transit_line.reliability %></td>
          <td><%= transit_line.avg_price %></td>
          <td><%= link_to 'Show', transit_line %></td>
          <td><%= link_to 'Edit', edit_transit_line_path(transit_line) %></td>
          <td><%= link_to 'Destroy', transit_line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Transit Line', new_transit_line_path %>
</div>
